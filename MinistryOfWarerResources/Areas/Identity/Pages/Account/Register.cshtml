@page
@using Microsoft.AspNetCore.Authorization;
@model RegisterModel
@{
    ViewData["Title"] = "تسجيل";
}
@attribute [Authorize(Roles="admin")]

<div class="row" style="direction:rtl;background-color:whitesmoke">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <br />
            <h2 style="color:#AD1457">اضافة مستخدم جديد</h2>
            <hr />
            <br />
            <div class="form-floating" style="">
                <input asp-for="Input.Email" placeholder="اسم المستخدم" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">اسم المستخدم</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input type="password" placeholder="كلمة المرور" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"> كلمة المرور</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br />

            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" placeholder=" تاكيد كلمة المرور" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">  تاكيد كلمة المرور </label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            
            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">اضافة المستخدم </button>

        </form>
    </div>
    <div class="row row-cols-lg-3 row-cols-1">
        <div class="col">

        </div>
        <div></div>
        <div>
            <a href="/"><button class="w-100 btn btn-lg btn-primary"> الرجوع الى القائمة الرئيسية </button></a>

        </div>
    </div>
</div>

@section Scripts {
